  "scripts": {
    "tilt:up:github-dashboard": "TILT_PORT=${TILT_PORT:-10360} tilt up github-dashboard",
    "tilt:down": "TILT_PORT=${TILT_PORT:-10360} tilt down",
    "cleanup:ports": "lsof -ti tcp:3001,4202,5001 | xargs kill -9 2>/dev/null || true",
    "cleanup:nx": "pkill -f 'nx serve' 2>/dev/null || true",
    "cleanup:all": "pnpm run cleanup:ports && pnpm run cleanup:nx",
    "dev:start": "pnpm run cleanup:all && pnpm run tilt:up:github-dashboard",
    "lint:fix": "nx run-many --target=lint --fix --all",
    "lint:unused-imports": "nx run-many --target=lint --all"
  },
